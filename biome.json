{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "a11y": {
        "all": false
      },
      "suspicious": {
        "noConsoleLog": "warn"
      },
      "correctness": {
        "noNodejsModules": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["**/dist/**", "**/node_modules/**", "**/.vscode/**"]
  }
}
